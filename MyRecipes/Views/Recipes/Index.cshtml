@model List<Recipe>
@{
    ViewData["Title"] = "Recipes page";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width = device-width" />
    <title>Index</title>
</head>

<body>
    <div class="text-center">
        <h1 class="display-4">Рецепти</h1>
        <div class="container">
            <table id="recipes" class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Номер на рецепта</th>
                        <th>Име</th>
                        <th>Начин на приготвяне</th>
                        <th>Операции</th>
                    </tr>

                    @foreach (var i in Model)
                    {
                        <tr>
                            <td>@i.ID</td>
                            <td>@i.Name</td>
                            <td>@i.Description</td>
                            <td>
                                <a asp-action="Update" asp-route-id="@i.ID">Промени</a> |
                                <a asp-action="Details" asp-route-id="@i.ID">Детайли</a> |
                                <a asp-action="Delete" asp-route-id="@i.ID">Изтрий</a>
                            </td>
                        </tr>
                    }
                </thead>
            </table>
        </div>
    </div>
    <button class="myButton"><a asp-action="Create">Добави рецепта</a></button>
</body>
</html>
