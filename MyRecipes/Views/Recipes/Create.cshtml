@model MyRecipes.Models.Recipe
@{
    ViewData["Title"] = "Recipes page";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width = device-width" />
    <title>Create</title>
</head>

<body>
    <div class="text-center">
        <h1 class="display-4">Добави рецепта</h1>

            @using (Html.BeginForm("Create", "Recipes", FormMethod.Post))
            {
                    @Html.AntiForgeryToken()
                    <p>Име на рецепта:</p>
                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                    <p>Описание на рецепта:</p>
                    @Html.TextBoxFor(model => model.Description, new { @class = "form-control" })
                    <button class="myButton" type="submit">Добави</button>
            }

    </div>
</body>
</html>

